{
  "name": "@nick/comrak",
  "version": "0.4.4",
  "license": "MIT",
  "author": {
    "name": "Nicholas Berlette",
    "email": "nick@berlette.com",
    "url": "https://github.com/nberlette/comrak-wasm"
  },
  "exports": "./mod.ts",
  "tasks": {
    "build": "deno run -A build.ts",
    "test": "deno run build; deno test -A --no-check=remote",
    "check": "deno fmt --check && deno lint && deno run test && deno doc --lint"
  },
  "publish": {
    "include": [
      "**/*.ts",
      "**/*.js*",
      "**/*.md",
      "**/*.wasm",
      "LICENSE"
    ],
    "exclude": [
      "**/.*",
      "**/*.test.*",
      "target",
      "build.ts",
      "test.*",
      "!lib"
    ]
  },
  "lock": true,
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.11"
  }
}
